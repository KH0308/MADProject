<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Workshop2Test" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/midGreen</item>
        <item name="colorPrimaryVariant">@color/softGreen</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secSoftGreen</item>
        <item name="colorSecondaryVariant">@color/secMidGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark Mode -->
    <!-- Screen Background -->
    <style name="Screen">
        <item name="android:background">#38512E</item>
    </style>

    <!-- Text Background -->
    <style name="Text">
        <item name="android:textColor">#C0E0B2</item>
    </style>

    <!-- Button Background -->
    <style name="Button">
        <item name="android:background">#C0E0B2</item>
        <item name="android:textColor">#38512E</item>
    </style>

</resources>