<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Screen"
    tools:context=".DeleteProfileAdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/warningImg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_baseline_warning_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="You are going delete your account!!!\n Are you sure?"
            android:textSize="20sp"
            style="@style/Text"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            style="@style/Button"
            android:text="Yes" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/Button"
            android:text="No" />

        <EditText
            android:id="@+id/Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints="ID"
            android:background="#808C7D7D"
            android:drawableEnd="@drawable/ic_baseline_mode_edit_24"
            android:hint="ID"
            android:inputType="text"
            android:minHeight="48dp"
            android:singleLine="true"
            style="@style/Text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="Password"
            android:background="#808C7D7D"
            android:drawableEnd="@drawable/ic_baseline_mode_edit_24"
            android:hint="Password"
            android:inputType="textVisiblePassword"
            android:minHeight="48dp"
            android:singleLine="true"
            style="@style/Text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/rePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="Re-Password"
            android:background="#808C7D7D"
            android:drawableEnd="@drawable/ic_baseline_mode_edit_24"
            android:hint="Re-Password"
            android:inputType="textVisiblePassword"
            android:minHeight="48dp"
            android:singleLine="true"
            style="@style/Text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            style="@style/Button"
            android:clickable="true"
            android:enabled="false"
            android:focusable="true"
            android:text="Proceed Delete" />

    </LinearLayout>

</FrameLayout>