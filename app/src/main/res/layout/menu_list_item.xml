<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/arrListMenu"
        android:gravity="fill_horizontal">

        <ImageView
            android:id="@+id/ItmImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/MItmID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ItmImg"
            android:text="Menu Item ID"
            style="@style/Text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/BsnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business ID"
            style="@style/Text"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/MItmID"
            android:layout_toEndOf="@+id/ItmImg"/>

        <TextView
            android:id="@+id/MID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu ID"
            style="@style/Text"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/BsnID"
            android:layout_toEndOf="@+id/ItmImg"/>

        <TextView
            android:id="@+id/CID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category ID"
            style="@style/Text"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/MID"
            android:layout_toEndOf="@+id/ItmImg"/>

        <TextView
            android:id="@+id/NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            style="@style/Text"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/CID"
            android:layout_toEndOf="@+id/ItmImg"/>

        <TextView
            android:id="@+id/DESC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            style="@style/Text"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/MItmID"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/PRICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:singleLine="false"
            style="@style/Text"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/NAME"
            android:layout_toEndOf="@+id/ItmImg"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="160dp"
            android:background="@color/black"/>

    </RelativeLayout>

</LinearLayout>