<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrStsRow"
        android:padding="10dp">

        <TextView
            android:id="@+id/TscID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction id"
            style="@style/Text"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/ItmNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            style="@style/Text"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/TscID"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/TtlPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total sales"
            style="@style/Text"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/ItmNm"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/timeSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            style="@style/Text"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/TscID"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/dateSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales date"
            style="@style/Text"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timeSales"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/yearSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year sales"
            style="@style/Text"
            android:textSize="16sp"
            android:layout_alignBaseline="@+id/dateSales"
            android:layout_toEndOf="@+id/dateSales"
            android:layout_marginStart="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="100dp"
            android:background="@color/black"/>

    </RelativeLayout>

</LinearLayout>